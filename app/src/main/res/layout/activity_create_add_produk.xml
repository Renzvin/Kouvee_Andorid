<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/linearlayout_createaddproduk"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSupplier"
                android:layout_width="128dp"
                android:layout_height="29dp"
                android:layout_marginBottom="604dp"
                android:fontFamily="@font/amaranth_bold"
                android:text="Supplier "
                android:textAlignment="textStart"
                android:textColor="#ff9b9b"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_add_produk_supplier"
                android:layout_width="228dp"
                android:layout_height="29dp" />

        </LinearLayout>

            <TextView
                android:id="@+id/txtAddProduk"
                android:layout_width="119dp"
                android:layout_height="29dp"
                android:fontFamily="@font/amaranth_bold"
                android:text="Produk"
                android:textAlignment="textStart"
                android:textColor="#ff9b9b"
                android:textSize="16sp"
                android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/add_pemesanan_produk_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_tambahproduk"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#ff9b9b"
            android:fontFamily="@font/amaranth_bold"
            android:text="Tambah Produk"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_tambahPemesanan"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="181dp"
            android:layout_height="51dp"
            android:layout_marginBottom="304dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/amaranth_bold"
            android:text="Tambah"
            android:textAllCaps="false"
            android:textColor="#ff9b9b"
            android:textSize="22sp" />
    </LinearLayout>
</ScrollView>
